; day 05

(fun 
  {seat_to_binary n str} 
  {if (len str) 
    {seat_to_binary 
      (| (<< n 1) (| (== "B" (head str)) (== "R" (head str))))
      (tail str)} 
    n})

= {seats} (sorted (map (readlines "05.txt") (seat_to_binary 0)))

; part 1
at seats (- (len seats) 1)

; part 2
(map   
  (filter
    (zip (tail seats) (init seats))
    (\{x} 
      {unpack - (join x {1})}))
  (\{x} {/ (unpack + x) 2}))
