; day 03

= {lines} (readlines "03.txt")

(fun
  {count_hits map dr dc r c}
  {if (>= r (len map))
    0
    {+ 
      (== "#" (at (at_eval map r) c))
      (count_hits map dr dc (+ r dr) (% (+ c dc) (len (at_eval map r))))}})

; part 1
count_hits lines 1 3 0 0

; part 2
(reduce
  (map
    {{1 1} {1 3} {1 5} {1 7} {2 1}} 
    (\{delta} 
      {unpack count_hits (join {lines} delta {0 0})}))
  *)
